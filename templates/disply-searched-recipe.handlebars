<div class="panel-group" id="accordion-{{this.id}}" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="Ingredients">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion-{{this.id}}" href="#ingredients-{{this.id}}" aria-expanded="true" aria-controls="Ingredients">
                    Ingredients
                </a>
            </h4>
        </div>
        <div id="ingredients-{{this.id}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="Ingredients">
            <div class="panel-body">
                <ul class="with-tick">
                    {{#each this.extendedIngredients}}
                    <li>{{originalString}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="Instructions">
            <h4 class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion-{{this.id}}" href="#Instructions-{{this.id}}" aria-expanded="false" aria-controls="Instructions">
                    Instructions
                </a>
            </h4>
        </div>
        <div id="Instructions-{{this.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="Instructions">
            <div class="panel-body">
                {{#if this.instructions}}
                <p>{{this.instructions}}</p>
                {{else}}
                <div class="alert alert-warning">
                    <div class="container-fluid">
                        <div class="alert-icon">
                            <i class="material-icons">warning</i>
                        </div>
                        <strong>We're sorry!</strong> The server has no instructions for this recipe.
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>