<div>
    <ul class="list-group">
        {{#if users}}
        {{#each users}}
        <li id="username-container" class="list-group-item" user-id="{{this._id}}">
            <h3 class="username-holder">{{this.username}}</h3>
            <button class="btn btn-info btn-round" id="btn-user-favourites">
                <i class="material-icons">favorite</i> Favourites
            </button>
            {{#if this.friends.length}}
            <!--<i class="material-icons">supervisor_account</i>-->
            <span class="badge">Friends:  {{this.friends.length}}</span>
            {{/if}}
            <!--<i class="material-icons">supervisor_account</i>-->
            <span class="badge">Recipes favorited: 12</span>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <div class="alert alert-warning">
        <div class="container-fluid">
            <div class="alert-icon">
                <i class="material-icons">warning</i>
            </div>
            <b>It looks like the search didn't find a match to your query.</b>
        </div>
    </div>
    {{/if}}
</div>